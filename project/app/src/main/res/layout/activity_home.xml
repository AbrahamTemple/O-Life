<?xml version="1.0" encoding="utf-8"?>
<com.yalantis.taurus.PullToRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pull_to_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">


    <ScrollView
        android:id="@+id/suck_top"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/md_white_1000">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/home_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onHamburger"
                android:src="@drawable/ic_hamburger"
                android:tint="@android:color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:onClick="onIcon"
                android:src="@drawable/ic_user"
                android:tint="@android:color/white" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:canLoop="true"
        app:autoTurningTime="3000"/>

    <include layout="@layout/content_home_index" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:text="推荐医院" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_blue_grey_300"
            android:layout_alignParentEnd="true"
            android:textSize="18dp"
            android:layout_marginTop="2dp"
            android:text="更多" />
    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recommend"
            android:layout_width="match_parent"
            android:layout_height="330dp"/>
    </LinearLayout>
    </ScrollView>
</com.yalantis.taurus.PullToRefreshView>