<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/into_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">
    <com.yalantis.taurus.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/suck_top"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/md_white_1000">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/home_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="MissingConstraints">

                <fragment
                    android:id="@+id/tool_fragment"
                    android:name="com.example.myapplication.view.fragment.JellyToolFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.appbar.AppBarLayout>

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/convenientBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/home_nav"
                app:canLoop="true"
                app:autoTurningTime="3000"/>

            <include layout="@layout/content_home_index" />

            <RelativeLayout
                android:id="@+id/home_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/home_index">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"
                    android:text="推荐医院" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_blue_grey_300"
                    android:layout_alignParentEnd="true"
                    android:textSize="18dp"
                    android:layout_marginTop="2dp"
                    android:text="更多" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frag_layout"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_below="@+id/home_list_title"/>
                <View
                    android:id="@+id/placeHolder"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/frag_layout"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true" />
                <com.cleveroad.loopbar.widget.LoopBarView
                    android:id="@+id/endlessView"
                    android:layout_below="@+id/frag_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:enls_placeholderId="@id/placeHolder"
                    app:enls_orientation="horizontalBottom"
                    app:enls_selectionGravity="start"
                    app:enls_selectionMargin="10dp"
                    app:enls_overlaySize="5dp"
                    app:enls_selectionInAnimation="@animator/enls_scale_restore"
                    app:enls_selectionOutAnimation="@animator/enls_scale_small"
                    app:enls_selectionBackground="@android:color/holo_blue_dark"
                    app:enls_menu="@menu/loopbar"
                    app:enls_scrollMode="auto"
                    app:enls_listBackground="@android:color/holo_orange_dark"/>
            </RelativeLayout>
        </ScrollView>
    </com.yalantis.taurus.PullToRefreshView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>