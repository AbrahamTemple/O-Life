<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_index"
    android:orientation="horizontal"
    android:layout_below="@+id/convenientBanner"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:id="@+id/staff_index"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/staff_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_staff"
            android:scaleType="fitCenter"
            app:imageView_scale="0.7"
            app:imageView_duration="300"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="陪诊服务"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/callout_index"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/callout_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_callout"
            android:scaleType="fitCenter"
            app:imageView_scale="0.7"
            app:imageView_duration="300"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="一键通话"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_index"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/register_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_register"
            android:scaleType="fitCenter"
            app:imageView_scale="0.7"
            app:imageView_duration="300"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="预约挂号"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/healthy_chat_index"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/healthy_chat_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_healthy_chat"
            android:scaleType="fitCenter"
            app:imageView_scale="0.7"
            app:imageView_duration="300"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="健康咨询"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_black_1000"/>
    </LinearLayout>
</LinearLayout>