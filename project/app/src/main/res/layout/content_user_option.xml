<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginTop="15dp">
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/md_grey_600"
        android:layout_margin="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/settings_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_setting"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户设置"
            android:textColor="@color/md_grey_600"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/settings_logo"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/settings_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/md_grey_600"
        android:layout_margin="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/protocol_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_file"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关协议"
            android:textColor="@color/md_grey_600"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/protocol_logo"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/protocol_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/md_grey_600"
        android:layout_margin="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/logout_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_logout"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="@color/md_grey_600"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/logout_logo"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/logout_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/md_grey_600"
        android:layout_margin="1dp"/>
</LinearLayout>