<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EmergencyActivity">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:id="@+id/call_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="一键呼叫"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/md_white_1000"
        app:icon="@drawable/ic_call"
        app:cornerRadius="20dp"
        app:rippleColor="@color/colorControlActivated"
        android:layout_centerHorizontal="true">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/title_d"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_btn"
        android:textColor="#000000"
        android:text="Android WebSocket"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/message_text"
        android:layout_height="200dp"
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:hint="Enter a message"
        android:layout_below="@+id/title_d"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/publish_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/eggplant"
        android:layout_below="@+id/message_text"
        android:text="Send To Websocket" />

    <Button
        android:id="@+id/restart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorControlActivated"
        android:layout_below="@+id/publish_btn"
        android:text="Reconnection" />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/restart_btn">
        <LinearLayout
            android:id="@+id/linear_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</RelativeLayout>